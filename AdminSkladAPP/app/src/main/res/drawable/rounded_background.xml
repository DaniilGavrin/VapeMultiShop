<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Тень -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#BDBDBD" /> <!-- Серый цвет для тени -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Основной фон -->
    <item android:top="4dp" android:left="4dp"> <!-- Смещаем основной фон для создания эффекта тени -->
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFFFFF"
                android:endColor="#F1F1F1"
                android:angle="90" /> <!-- Легкий градиент от белого к серому -->
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#DDDDDD" /> <!-- Легкая рамка вокруг формы -->
        </shape>
    </item>

</layer-list>
